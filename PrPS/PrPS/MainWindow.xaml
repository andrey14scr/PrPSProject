<Window x:Class="PrPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrPS"
        mc:Ignorable="d"
        Title="{DynamicResource Title}" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFEDF7FF">
        <Menu Height="22" VerticalAlignment="Top" Background="{x:Null}" Padding="0,2,0,0">
            <MenuItem Header="{DynamicResource File}">
                <MenuItem Header="New Project"></MenuItem>
                <MenuItem Header="Open Project"></MenuItem>
                <Separator />
                <MenuItem x:Name="miExit" Header="{DynamicResource Exit}" Click="miExit_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Edit}">
                <MenuItem Header="{DynamicResource Account}">
                    <MenuItem x:Name="miAccExit" Header="{DynamicResource Exit}" Click="miAccExit_Click"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource View}" ></MenuItem>
        </Menu>
        <Frame x:Name="Fraim" Background="Azure" Margin="0,25,0,0"/>

    </Grid>
</Window>
